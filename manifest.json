{
  "manifest_version": 3,
  "name": "X Cooldown Engagement",
  "version": "2.0",
  "description": "View X while throttling engagement with reflection prompts, escalating cooldowns, and a stats dashboard.",
  "browser_specific_settings": {
    "gecko": {
      "id": "x-cooldown@xgate.local",
      "strict_min_version": "109.0"
    }
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_title": "X Cooldown",
    "default_popup": "dashboard.html"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["index.js"],
      "type": "module",
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
